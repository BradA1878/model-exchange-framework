{
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_COMPONENT=sdk bash .claude/hooks/notify-umbrella.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read(/src/sdk/**)",
      "Edit(/src/sdk/**)",
      "Read(/src/shared/**)",
      "Read(/tests/integration/agent/**)",
      "Edit(/tests/integration/agent/**)",
      "Read(/CLAUDE.md)",
      "Read(/package.json)",
      "Read(/tsconfig.json)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)"
    ],
    "deny": [
      "Edit(/src/server/**)",
      "Edit(/src/shared/**)",
      "Edit(/dashboard/**)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)"
    ]
  }
}
