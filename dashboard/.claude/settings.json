{
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_COMPONENT=dashboard bash .claude/hooks/notify-umbrella.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read(/dashboard/**)",
      "Edit(/dashboard/**)",
      "Read(/CLAUDE.md)",
      "Bash(npm run:*)",
      "Bash(npm install:*)",
      "Bash(npx:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)"
    ],
    "deny": [
      "Edit(/src/**)",
      "Read(/src/**)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)"
    ]
  }
}
