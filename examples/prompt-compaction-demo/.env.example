# MXF Server Connection
MXF_DOMAIN_KEY=your_domain_key_here

# User Authentication
MXF_DEMO_USERNAME=demo-user
MXF_DEMO_PASSWORD=demo-password-1234

# OpenRouter API Key (required for agent LLM calls)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Prompt Compaction Configuration (all disabled by default for safe rollout)
PROMPT_COMPACTION_ENABLED=true
PROMPT_COMPACTION_RESIDUALS_ENABLED=true
PROMPT_COMPACTION_TIERED_ENABLED=true
PROMPT_COMPACTION_BUDGET_ENABLED=true

# Tier sizes (number of messages at each compression level)
PROMPT_COMPACTION_TIER0_SIZE=10
PROMPT_COMPACTION_TIER1_SIZE=25
PROMPT_COMPACTION_TIER2_SIZE=50

# Residual threshold (importance score 0-100 for skip connections)
PROMPT_COMPACTION_RESIDUAL_THRESHOLD=60
PROMPT_COMPACTION_RESIDUAL_MAX_PERCENT=0.20

# Token budget
PROMPT_COMPACTION_DEFAULT_BUDGET=8000
PROMPT_COMPACTION_MAX_SYSTEM_PROMPT_TOKENS=2500
