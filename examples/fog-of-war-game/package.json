{
  "name": "fog-of-war-game",
  "version": "1.0.0",
  "description": "Fog of War: Parallel Minds - MXF Multi-Agent Strategy Game Demo",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:client": "cd client && npm run build",
    "build:all": "npm run build && npm run build:client",
    "dev": "ts-node server/index.ts",
    "dev:client": "cd client && npm run dev",
    "connect-agents": "ts-node connect-agents.ts",
    "game": "(trap 'kill 0' SIGINT; npm run connect-agents & cd client && npm run dev)",
    "start": "node dist/index.js",
    "clean": "rm -rf dist && rm -rf client/dist",
    "rebuild": "npm run clean && npm run build:all"
  },
  "keywords": ["mxf", "multi-agent", "game", "strategy", "demo"],
  "author": "MXF Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/cors": "^2.8.13",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.1"
  }
}
