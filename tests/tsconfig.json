{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "../dist/tests",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "..",
    "paths": {
      "@mxf/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../src/**/*.ts",
    "../examples/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../dist"
  ]
}
