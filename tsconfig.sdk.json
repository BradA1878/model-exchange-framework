{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "outDir": "dist-sdk",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": false,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "rootDir": "src",
        "noEmitOnError": true,
        "skipLibCheck": true
    },
    "include": [
        "src/sdk/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-sdk",
        "src/server/**/*",
        "src/cli/**/*",
        "**/*.spec.ts"
    ]
}
